<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dream_pink"
    android:padding="20dp">

    <!-- 상단 구름 아이콘 -->
    <ImageView
        android:id="@+id/ic_cloud_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/cloud_icon"
        app:srcCompat="@drawable/ic_cloud_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 질문 텍스트 -->
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오늘은 어떤 꿈을 꾸었나요?"
        android:textColor="@color/text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ic_cloud_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- 버튼 2개 영역 -->
    <LinearLayout
        android:id="@+id/btnRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInput"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="직접 입력"
            android:backgroundTint="@android:color/transparent"
            android:insetTop="0dp" android:insetBottom="0dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="12dp" android:paddingRight="12dp"
            android:background="@drawable/btn_outline"
            app:iconPadding="8dp"
            app:iconGravity="textStart"/>

        <Space
            android:layout_width="12dp"
            android:layout_height="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecord"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="녹음하기"
            android:backgroundTint="@android:color/transparent"
            android:insetTop="0dp" android:insetBottom="0dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="12dp" android:paddingRight="12dp"
            android:background="@drawable/btn_outline"
            app:icon="@drawable/ic_mic_24"
            app:iconPadding="8dp"
            app:iconGravity="textStart"/>
    </LinearLayout>

    <!-- 입력 칸 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDream"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxBackgroundColor="@color/cloud_blue"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDream"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:hint="예: 바닷가에서 고래를 만났어요"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:imeOptions="flagNoFullscreen"
            android:fontFamily="@font/notosanskr_regular"
            android:overScrollMode="never"
            android:padding="12dp"
            android:background="@android:color/transparent" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- 하단 CTA 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGenerate"
        style="@style/Widget.Material3.Button"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="이미지 생성하기 →"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tilDream"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="감정 캘린더 보기" />


</androidx.constraintlayout.widget.ConstraintLayout>
